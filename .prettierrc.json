{
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "semi": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "trailingComma": "es5",
  "bracketSameLine": true,
  "printWidth": 80,
  "endOfLine": "auto",
  "plugins": [
    "prettier-plugin-tailwindcss",
    "@trivago/prettier-plugin-sort-imports"
  ],
  "importOrder": [
    "^(next|react)",
    "framer-motion(/.*|$)",
    "lucide-react(.*)",
    "^(@/models|@/dictionaries|@/constants|@/utils|@/hooks|@/schemas|@/store)(/.*|$)",
    "^(@/components)(/.*|$)",
    "[./|~/]",
    "^\\w"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
